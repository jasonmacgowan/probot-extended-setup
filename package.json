{
  "name": "probot-extended-setup",
  "version": "0.2.0",
  "description": "Web editor for configuring Probot apps",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Jason Macgowan <1389531+jasonmacgowan@users.noreply.github.com>",
  "license": "ISC",
  "repository": "https://github.com/jasonmacgowan/probot-extended-setup.git",
  "homepage": "https://github.com/jasonmacgowan/probot-extended-setup",
  "bugs": "https://github.com/jasonmacgowan/probot-extended-setup/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf ./lib",
    "git-commit": "cz",
    "lint:fix": "eslint --fix .",
    "lint": "eslint .",
    "prepublishOnly": "npm run clean && npm run build",
    "semantic-release": "semantic-release",
    "start": "probot run ./lib/index.js",
    "test": "jest"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "handlebars": "^4.7.6",
    "js-yaml": "^3.14.0",
    "probot": "^10.1.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.9",
    "@types/js-yaml": "^3.12.5",
    "@types/nock": "^11.1.0",
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.8.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-typescript": "^0.14.0",
    "jest": "^26.4.0",
    "nock": "^13.0.4",
    "prettier": "2.1.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.1.1",
    "smee-client": "^1.1.0",
    "ts-jest": "^26.2.0",
    "typescript": "^3.9.7"
  },
  "engines": {
    "node": ">= 10.13.0"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "files": [
    "lib",
    "views"
  ]
}
